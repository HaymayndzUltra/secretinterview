{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "strict": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "electron"]
  },
  "include": ["src/**/*", "knowledge/**/*", "electron.vite.config.ts", "tailwind.config.cjs", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
